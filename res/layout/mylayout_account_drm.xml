<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:paddingStart="19dp"
        android:background="#ff000000"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:text="@string/drm_active"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="19dp"
        >
        <ProgressBar android:id="@+id/my_drm_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:minWidth="60dp"
            android:minHeight="60dp"
            style="?android:attr/progressBarStyleLarge"
            android:visibility="gone"
            />
        <TableLayout android:id="@+id/user_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView android:id="@+id/myid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="25dp"
                    android:text="@string/myidentity_title"
                    />
                <EditText android:id="@+id/my_id_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybtn_shape"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:textSize="24dp"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView android:id="@+id/mypw_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="25dp"
                    android:text="@string/mypassword_title"
                    />
                <EditText android:id="@+id/my_pw_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybtn_shape"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:textSize="24dp"
                    android:inputType="textPassword"
                    />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/user_table"
            android:layout_marginStart="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <Button android:id="@+id/myok"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mybtn_shape"
                android:textSize="20dp"
                android:text="@string/dlg_ok"
                />
            <Button android:id="@+id/mycancel"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/mybtn_shape"
                android:textSize="20dp"
                android:text="@string/dlg_cancel"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
