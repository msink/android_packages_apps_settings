<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relate_preference"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70px"
    android:gravity="center_vertical"
    android:paddingRight="?android:scrollbarSize">

    <RelativeLayout android:id="@id/preference_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <TextView android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            />
        <TextView android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18px"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="top"
            android:maxLines="2"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="563px"
        android:layout_height="1px"
        android:layout_marginBottom="5px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5px"
        android:src="#000"
        />

    <ImageView android:id="@+id/settingsicon"
        android:layout_width="13px"
        android:layout_height="14px"
        android:layout_gravity="center"
        android:layout_marginRight="20px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>
