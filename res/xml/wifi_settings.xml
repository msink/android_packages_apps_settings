<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:key="wifi_parent"
        android:title="@string/wifi_settings_category">
    <com.android.settings.TitlePreference
        android:key="wifi_title"
        android:title="@string/settings_label"
        settings:settingicon="@drawable/settings_icon" />
    <com.android.settings.ChildTitlePreference
        android:key="wifisettings_back"
        android:title="@string/wifi_settings_category"
        settings:settingicon="@drawable/settings_back">
        <intent android:targetPackage="com.android.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.settings.Settings" />
    </com.android.settings.ChildTitlePreference>
    <com.android.settings.MyIconPreferenceScreen android:key="wifi_space" settings:height="30px" />

    <com.android.settings.MyCheckBoxPreference
            android:key="enable_wifi"
            android:title="@string/wifi_quick_toggle_title"
            android:persistent="false" />

    <com.android.settings.MyCheckBoxPreference
            android:key="notify_open_networks"
            android:dependency="enable_wifi"
            android:title="@string/wifi_notify_open_networks"
            android:persistent="false" />

    <com.android.settings.ProgressCategory
            android:key="access_points"
            android:dependency="enable_wifi"
            android:title="@string/wifi_access_points"
            android:persistent="false" />

    <com.android.settings.MyIconPreferenceScreen
            settings:bg="@drawable/settings_wifi_bg"
            android:key="add_network"
            android:dependency="enable_wifi"
            android:title="@string/wifi_add_network"
            android:persistent="false" />

</PreferenceScreen>
