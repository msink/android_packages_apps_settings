<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <com.android.settings.TitlePreference
        android:title="@string/settings_label"
        settings:settingicon="@drawable/settings_icon" />
    <com.android.settings.ChildTitlePreference
        android:title="@string/privacy_settings"
        android:key="privacy_back"
        settings:settingicon="@drawable/settings_back">
        <intent android:targetPackage="com.android.settings"
                android:action="android.intent.action.MAIN"
                android:targetClass="com.android.settings.Settings" />
    </com.android.settings.ChildTitlePreference>
    <com.android.settings.MyIconPreferenceScreen settings:height="30px" />

        <!-- Backup settings -->
        <com.android.settings.MyCheckBoxPreference
                settings:checkbg="@drawable/settings_bg_top"
                android:key="backup_data"
                android:title="@string/backup_data_title"
                android:summary="@string/backup_data_summary"
                android:persistent="false" />
        <com.android.settings.MyCheckBoxPreference
                settings:checkbg="@drawable/settings_bg_mid"
                android:key="auto_restore"
                android:title="@string/auto_restore_title"
                android:summary="@string/auto_restore_summary"
                android:persistent="false" />

        <!-- Factory reset -->
        <com.android.settings.MyIconPreferenceScreen
                settings:bg="@drawable/settings_bg_bottom"
                android:title="@string/master_clear_title"
                android:summary="@string/master_clear_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.android.settings"
                    android:targetClass="com.android.settings.MasterClear" />
        </com.android.settings.MyIconPreferenceScreen>

</PreferenceScreen>
