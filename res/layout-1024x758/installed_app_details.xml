<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/all_details"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="6dip"
            android:paddingTop="5dip"
            android:paddingRight="6dip"
            android:paddingBottom="5dip">
            <include android:id="@+id/app_snippet"
                layout="@layout/manage_applications_item" />
            <include android:id="@+id/control_buttons_panel"
                layout="@layout/two_buttons_panel" />
        </LinearLayout>
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:text="@string/storage_label" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="6dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="-1dip"
                android:baselineAligned="true">
                <TextView android:id="@+id/total_size_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:paddingTop="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:text="@string/total_size_label"
                    android:maxLines="1" />
                <ImageView android:id="@+id/info_size_dots"
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/dotted_line_480px"
                    android:scaleType="center" />
                <TextView android:id="@+id/total_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dip"
                    android:paddingRight="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="-1dip"
                android:baselineAligned="true">
                <TextView android:id="@+id/application_size_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:paddingTop="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:text="@string/application_size_label"
                    android:maxLines="1" />
                <ImageView android:id="@+id/info_size_dots"
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/dotted_line_480px"
                    android:scaleType="center" />
                <TextView android:id="@+id/application_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dip"
                    android:paddingRight="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout android:id="@+id/info_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="-1dip"
                android:baselineAligned="true">
                <TextView android:id="@+id/data_size_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:paddingTop="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:text="@string/data_size_label"
                    android:maxLines="1" />
                <ImageView android:id="@+id/info_size_dots"
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/dotted_line_480px"
                    android:scaleType="center" />
                <TextView android:id="@+id/data_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dip"
                    android:paddingRight="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:maxLines="1" />
            </LinearLayout>
            <include android:id="@+id/data_buttons_panel"
                layout="@layout/two_buttons_panel" />
        </LinearLayout>
        <RelativeLayout android:id="@+id/cache_panel"
            android:layout_marginTop="6dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/cache_header"
                style="?android:attr/listSeparatorTextViewStyle"
                android:text="@string/cache_header_label" />
            <LinearLayout android:id="@+id/cache_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="-1dip"
                android:baselineAligned="true"
                android:layout_below="@id/cache_header">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dip"
                    android:paddingTop="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:text="@string/cache_size_label"
                    android:maxLines="1" />
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/dotted_line_480px"
                    android:scaleType="center" />
                <TextView android:id="@+id/cache_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dip"
                    android:paddingRight="6dip"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:maxLines="1" />
            </LinearLayout>
            <Button
               android:id="@+id/clear_cache_button"
               android:layout_width="200dip"
               android:layout_height="wrap_content"
               android:paddingTop="15dip"
               android:paddingBottom="15dip"
               android:textAppearance="?android:textAppearanceLarge"
               android:text="@string/clear_cache_btn_text"
               android:layout_below="@id/cache_size"
               android:layout_alignParentRight="true"
               android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_marginTop="6dip"
            android:text="@string/auto_launch_label" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView android:id="@+id/auto_launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="6dip"
                android:paddingTop="6dip"
                android:paddingRight="6dip"
                android:textAppearance="?android:textAppearanceLarge" />
            <Button android:id="@+id/clear_activities_button"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/auto_launch"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:layout_marginTop="4dip"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/clear_activities" />
        </RelativeLayout>
        <LinearLayout android:id="@+id/permissions_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:text="@string/permissions_label" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dip"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/security_settings_desc" />
            <LinearLayout android:id="@+id/security_settings_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
